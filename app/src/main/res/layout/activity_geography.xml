<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GeographyActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/question_no"
        android:text="Question No. "
        android:textSize="20sp"
        android:textColor="@color/ultramarine_blue"
        android:textStyle="bold"
        android:fontFamily="@font/abeezee"
        android:gravity="start"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/question"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/blue_sapphire"
        android:textStyle="bold"
        android:fontFamily="@font/abeezee"
        android:gravity="start"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/question_options"
        android:layout_marginTop="30dp">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/option_1"
            android:text="Option 1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/abeezee"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/option_2"
            android:text="Option 2"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/abeezee"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/option_3"
            android:text="Option 3"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/abeezee"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/option_4"
            android:text="Option 4"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/abeezee"/>

    </RadioGroup>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginTop="40dp">

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_btn"
                android:text="Save Answer"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/abeezee"
                android:background="@drawable/save_btn_bg"
                android:padding="10dp"
                android:layout_marginEnd="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="Submit Quiz"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@drawable/submit_btn_bg"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:visibility="invisible"/>
        </TableRow>

    </TableLayout>

    <!-- Result -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/total_attempted_questions"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/blue_sapphire"
        android:textStyle="bold"
        android:fontFamily="@font/abeezee"
        android:gravity="start" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/questions_answered_correctly"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/ultramarine_blue"
        android:textStyle="bold"
        android:fontFamily="@font/abeezee"
        android:gravity="start" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/questions_answered_wrong"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:fontFamily="@font/abeezee"
        android:gravity="start" />

</LinearLayout>